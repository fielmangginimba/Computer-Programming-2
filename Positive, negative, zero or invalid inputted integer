#include <stdio.h>

int main() {

    int num;

    printf("Input any integer: ");

    scanf("%d", &num);

    switch (num > 0)

    {

    case 1:

        printf("The integer is positive number", num);

        break;

    case 0:

        switch (num < 0)

        {

        case 1:

            printf("The integer is negative number", num);

            break;

        case 0:

            printf("%d is zero.", num);

            break;

        }

        break;

    }

    return 0;

}
